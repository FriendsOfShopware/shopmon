{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 9am on monday"
  ],
  "commitMessagePrefix": "fix(deps): ",
  "packageRules": [
    {
      "groupName": "all",
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "github-actions": {
    "enabled": true
  }
}
