<mjml>
  <mj-body background-color="#f3f4f6">
    <mj-section>
      <mj-column>
        <mj-image width="128px" height="128px" src="${vars.FRONTEND_URL}/mstile-70x70.png"></mj-image>

        <mj-text color="#121826" font-size="16px" font-family="arial">
          Hi,
        </mj-text>

        <mj-text color="#121826" font-size="16px" font-family="arial">
           please click the button below to reset your password.
        </mj-text>

        <mj-button background-color="#43a3e6" color="#fff" font-size="16px" font-weight="bold" font-family="arial" height="42px" padding="10px 20px" href="${vars.FRONTEND_URL}/account/forgot-password/${vars.token}">
          Reset password
        </mj-button>


        <mj-text color="#121826" font-size="16px" font-family="arial">
          Best Regards,
        </mj-text>

        <mj-text color="#121826" font-size="16px" font-family="arial">
          FriendsOfShopware
        </mj-text>
      </mj-column>
