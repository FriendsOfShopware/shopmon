{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "@cloudflare/workers-types",
    ],
    "typeRoots": [
      "./src/types"
    ]
  },
  "include": [
    "types",
    "src",
    "workers"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
}