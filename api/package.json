{
  "name": "shopmon",
  "version": "0.0.1",
  "type": "module",
  "description": "",
  "scripts": {
    "dev": "bun --watch --port 5789 src/index.ts",
    "format": "biome format --write src",
    "lint": "biome lint src",
    "tslint": "tsc --noEmit",
    "generate:mail": "node generate-mjml.js",
    "cron": "bun src/cron/index.ts",
    "db:migrate": "bun migrate.ts",
    "db:generate": "drizzle-kit generate",
    "build:app": "bun build src/index.ts --production --target bun --sourcemap --outfile=app.js",
    "build:cron": "bun build src/cron/index.ts --production --target bun --sourcemap --outfile=cron.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@passwordless-id/webauthn": "^2.3.0",
    "@sentry/bun": "^9.22.0",
    "@shopware-ag/app-server-sdk": "^1.1.16",
    "@trpc/server": "^11.1.2",
    "drizzle-orm": "^0.43.1",
    "hono": "~4.7.7",
    "node-cron": "^4.0.7",
    "nodemailer": "^7.0.3",
    "sharp": "^0.34.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.14",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "drizzle-kit": "^0.31.0",
    "mjml": "^4.15.3",
    "typescript": "5.8.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild",
      "sharp"
    ]
  }
}
