{
	"compilerOptions": {
		"strict": true,
		"baseUrl": "src",
		"target": "esnext",
		"moduleResolution": "bundler",
		"module": "ES2020",
		"skipLibCheck": true,
		"paths": {
			"@/*": ["*"]
		},
		"strictNullChecks": true,
		"lib": ["DOM", "DOM.Iterable", "ES2015", "ESNext"],
		"jsx": "preserve",
		"types": ["unplugin-icons/types/vue", "vitest/globals"]
	},
	"exclude": ["node_modules", "dist"]
}
