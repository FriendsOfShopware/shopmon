{
	"$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
	"files": {
		"ignore": [
			"*.mjml",
			"drizzle/meta/**",
			"dist/**",
			"frontend/src/types/vue.shyim.d.ts",
			"frontend/src/styles/*.css",
			"frontend/src/style.css",
			"node_modules/**",
			"frontend/components.d.ts"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"indentWidth": 4,
			"indentStyle": "space",
			"quoteStyle": "single"
		}
	}
}
